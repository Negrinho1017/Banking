# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page

# Database Home
GET     /                           co.com.banking.presentation.controllers.ApplicationController.index
POST    /insert/client              co.com.banking.presentation.controllers.ApplicationController.insertClient
POST    /create/new/account         co.com.banking.presentation.controllers.ApplicationController.createNewAccount
POST    /add/new/movement           co.com.banking.presentation.controllers.ApplicationController.saveNewMovement
POST    /find/movement/by/code      co.com.banking.presentation.controllers.ApplicationController.findMovement
POST    /find/by/movement/type      co.com.banking.presentation.controllers.ApplicationController.findByMovementType
POST    /find/account/by/number     co.com.banking.presentation.controllers.ApplicationController.findAccountService
POST    /find/client/by/document    co.com.banking.presentation.controllers.ApplicationController.findClientByIdentificationNumberService

POST    /account/consign            co.com.banking.presentation.controllers.AccountController.consignAccount

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


POST    /account/consign            co.com.banking.presentation.controllers.AccountController.consignAccount
